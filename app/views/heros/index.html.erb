<% provide(:title, "Home") %>
<head>
<title><%= yield(:title)%> | Real Heroes DB</title>
</head>
<div class="container">
<div class="row">

<% @heros.each do |hero| %>
<div class="col-md-3">
  <a href="/heros/<%= hero.id %>">
    <%= image_tag hero.hero_image.url(:medium), class:"hero"%>
  </a>
  <h2><%= hero.name %></h2>
  <br>
  <br>
</div>
<% end %>
</div>
</div>
